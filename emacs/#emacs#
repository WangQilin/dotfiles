;;disable auto save                                                                                 
(set backup-inhibited t)

;;show line number in the left of buffer                                                            
(global-linum-mode t)

;;highlight current line                                                                            
(require 'hl-line)
(global-hl-line-mode t)

;;indentation setting                                                                               
(setq c-basic-offset 4)
(setq indent-tabs-mode nil)
;;disable auto save                                                                                 
(set backup-inhibited t)

;;show line number in the left of buffer                                                            
(global-linum-mode t)

;;highlight current line                                                                            
(require 'hl-line)
(global-hl-line-mode t)

;;indentation setting                                                                               
(setq c-basic-offset 4)
(setq indent-tabs-mode nil)
(setq tab-width 4)
(setq tab-stop-list ())